<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="-2.5dp"
        android:right="-2.5dp"
        android:top="-2.5dp">
        <selector>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@android:color/white" />
                    <padding
                        android:bottom="10dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item
                android:state_focused="true">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@android:color/background_dark" />
                    <padding
                        android:bottom="10dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="10dp" />
                </shape>
            </item>

        </selector>
    </item>


</layer-list>