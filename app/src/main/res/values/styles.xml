<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/enable_thumb_blue</item>
        <item name="colorSwitchThumbNormal">@color/disable_thumb_grey</item>
        <item name="android:colorForeground">@color/disable_forground_grey</item>
    </style>
    <style name="ImageUpload_btn_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/black_opacity</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#594892</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_switch_ocean</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color_switch_ocean</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/color_switch_inactive_grey</item>
    </style>
</resources>
